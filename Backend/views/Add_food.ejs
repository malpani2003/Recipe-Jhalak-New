      <label for="food_nm" class="form-label my-2">Instructions</label>
      <ul>

      </ul>
      <input type="text" name="food_nm" id="food_nm" class="form-control">
      <input type="submit" value="Add Instructions" class="btn btn-danger my-3 text-dark add_btn">

    </form> -->



    <!-- <input type="submit" value="Send Message" class="btn btn-success my-3"> -->
    <input type="submit" value="Add Food" class="btn btn-outline-success my-3">

</form>
   
    </div>

     <%- include("footer.ejs") %>

</body>
<script src="https://ajax.googleapis.com/ajax/libs/jquery/3.6.1/jquery.min.js"></script>
<script src="js/bootstrap.min.js"></script>
<script>
  function onTestChange() {
      var key = window.event.keyCode;
  
      // If the user has pressed enter
      if (key === 13) {
          document.getElementById("txtArea").value = document.getElementById("txtArea").value + "\n";
          return false;
      }
      else {
          return true;
      }
  }
  </script>

</html>