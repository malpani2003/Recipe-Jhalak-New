        <input type="text" name="id" id="id" value="User Id -: <%=user_id%>">
        <h2>OTP is send to your Email-Id</h2>
        <h4>Please Enter the OTP to Verify You</h4>
        <div class="fw-bold fs-2 timer"></div> left

        <!-- <input type="email" name="email" id="email" value="pranav malpani" readonly class="form-control my-2"> -->
        <input type="text" name="otp" id="otp" class="form-control my-2" maxlength="4" minlength="4" oninput="validate_otp()">
        <input type="submit" value="Verify" class="btn btn-success">
        <!-- <input type="number" name="" id=""> -->
    </form>
    <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 1440 320"><path fill="#ffd700" fill-opacity="1" d="M0,0L1440,288L1440,320L0,320Z"></path></svg>
    
</body>
</html>
